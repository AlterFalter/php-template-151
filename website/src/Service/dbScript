CREATE TABLE folder (
    Id INT(10) UNSIGNED AUTO_INCREMENT PRIMARY KEY,
    ParentFolderId INT(10) UNSIGNED,
    FOREIGN KEY (ParentFolderId) REFERENCES folder(id),
    Name VARCHAR(20)
);

CREATE TABLE user (
    Id INT(10) UNSIGNED AUTO_INCREMENT PRIMARY KEY,
    MainFolderId INT(10) UNSIGNED,
    FOREIGN KEY (MainFolderId) REFERENCES folder(id),
    Firstname VARCHAR(20) NOT NULL,
    Surname VARCHAR(20) NOT NULL,
    Email VARCHAR(50) NOT NULL,
    Password VARCHAR(32) NOT NULL,
    GuidForEmail CHAR(40) NOT NULL,
    GuidForNewPW CHAR(40) NOT NULL,
    EmailVerified BOOL NOT NULL
);

CREATE TABLE file(
    Id INT(10) UNSIGNED AUTO_INCREMENT  PRIMARY KEY,
    FolderId INT(10) UNSIGNED,
    FOREIGN KEY (FolderId) REFERENCES folder(id),
    Name VARCHAR(50) NOT NULL,
    Extension VARCHAR(10) NOT NULL
);

CREATE TABLE userFolderRealease (
    Id INT(10) UNSIGNED AUTO_INCREMENT PRIMARY KEY,
    UserId INT(10) UNSIGNED,
    FOREIGN KEY (UserId) REFERENCES user(id),
    FolderId INT(10) UNSIGNED,
    FOREIGN KEY (FolderId) REFERENCES folder(id)
);

CREATE TABLE userFileRealease (
    Id INT(10) UNSIGNED AUTO_INCREMENT PRIMARY KEY,
    UserId INT(10) UNSIGNED,
    FOREIGN KEY (UserId) REFERENCES user(id),
    FileId INT(10) UNSIGNED,
    FOREIGN KEY (FileId) REFERENCES file(id)
);
